{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "packages",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "target": "ES2021",
    "lib": ["ESNext", "ES2021"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@cedar-codegen/core": ["packages/cedar-codegen-core/src/index.ts"]
    },
  },
  "include": ["packages"],
  "exclude": ["**/dist"]
}